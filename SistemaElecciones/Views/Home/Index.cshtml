@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login - SE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/pages/login.css" asp-append-version="true" />
</head>
<body>
    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="mb-md-1 mt-md-1">
            <div class="mx-auto my-auto">
                <form id="loginForm" onclick="alertPrevent(event)" action="@Url.Action("LogIn")" method="post" class="form text-center">
                    <div class="logo mx-auto my-auto">
                        <img src="~/img/logo_completo_dark.png" alt="Logo" style="width:80%" class="mb-3 justify-content-center align-items-center">
                    </div>
            <input type="text" id="user" class="mb-3" placeholder="Usuario" name="user" />
            <input type="password" id="password" class="mb-3" placeholder="Contraseña" name="password" />
            <button type="submit">Ingresar</button>
            </form>
        </div>
        </div>
    </div>

</body>
</html>