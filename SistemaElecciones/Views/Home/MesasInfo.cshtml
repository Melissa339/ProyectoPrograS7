@model List<SistemaElecciones.Models.Mesa>
    @*@model SistemaElecciones.Models.MesasViewModel*@
    @using SistemaElecciones.Models

@{
    
}

@section Links{
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/pages/home.css" asp-append-version="true" />
}

<div class="card-body">
        <p>
            <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#createModal">
                <i class="fa-solid fa-plus fa-bounce"></i> Agregar Mesa
            </button>
        </p>
        <div class="table-responsive ">
            <table id="table" class="table table-striped ">
                <thead class="table-light">
                    <tr>
                        <th>Encargado</th>
                        <th>Votos</th>
                        <th>Ubicacion</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {                        
                        <tr>
                            <td>@item.IdUsuarioNavigation.Nombre</td>
                            <td>@item.CantidadVotos</td>
                            <td>@item.IdUbicacion</td>
                            <td>
                                <form asp-action="Eliminar" asp-route-id="@item.IdMesa">
                                    <button class="option" type="submit">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
</div>


<!-- Modal Agregar mesa-->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Crear Consulta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="crear" method="POST" action="@Url.Action("Create","Consultas")">
                    <div class="row">
                        <div class="form-group">
                            <label class="control-label">Encargado</label>
                            <select name="IdEncargado" id="idEncargado" class="form-select select2">
                               @foreach (var item in Model)

                                {
                                    <option value="@item.IdUsuarioNavigation.IdUsuario ">@item.IdUsuarioNavigation.Nombre</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Cantidad de votos</label>
                            <input name="votos" id="votos" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Ubicacion</label>
                            <select name="IdEncargado" id="idEncargado" class="form-select select2">
                                @foreach (var item in Model)
                                {
                                    <option value="@item.IdDepartamentoNavigation.nombre">@item.IdDepartamentoNavigation.nombre</option>
                                }
                            </select>
                            <input name="PresionArterial" id="PresionArterial" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Temperatura</label>
                            <input name="Temperatura" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Motivo de Consulta</label>
                            <input name="MotivoConsulta" id="PresionArterial" class="form-control" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary" form="crear">Agregar</button>
            </div>

        </div>
    </div>
</div>